<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CadastroDisciplinaController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f0f4f7, #e6ecf1);">

    <!-- TOPO -->
    <top>
        <Label text="Cadastro de Disciplina" 
               style="-fx-font-size: 28px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- CENTRO -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>

                <!-- FORMULÁRIO -->
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                        <ColumnConstraints prefWidth="250"/>
                    </columnConstraints>

                    <children>
                        <!-- Linha 1 -->
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nomeField" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Linha 2 -->
                        <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Linha 3 -->
                        <Label text="Carga Horária:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="cargaHorariaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <!-- Linha 4 -->
                        <Label text="Código:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="codigoField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Linha 5 -->
                        <Label text="Ementa:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextArea fx:id="ementaField" prefHeight="80" prefWidth="250"
                                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <!-- Linha 6 -->
                        <Label text="Semestre:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="semestreField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <!-- Linha 7 -->
                        <Label text="Curso:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cursoCombo" prefWidth="250" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <!-- BOTÕES -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button text="Cadastrar" onAction="#cadastrarDisciplina"
                                style="-fx-background-color: #0052D4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                        <Button text="Limpar" onAction="#limparCampos"
                                style="-fx-background-color: #cccccc; -fx-font-weight: bold; -fx-background-radius: 8;"/>
                        <Button text="Voltar" onAction="#voltar"
                                style="-fx-background-color: transparent; -fx-border-color: #0052D4; -fx-text-fill: #0052D4; -fx-font-weight: bold; -fx-border-radius: 8;"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>
