<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #f0f4f7, #e6ecf1);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.CadastroDisciplinaController">

    <!-- TOPO -->
    <top>
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Cadastro de Disciplina" BorderPane.alignment="CENTER" />
    </top>

    <!-- CENTRO -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <children>

                <!-- FORMULÁRIO -->
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                        <ColumnConstraints prefWidth="250" />
                    </columnConstraints>

                    <children>
                        <!-- Linha 1 -->
                        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomeField" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <!-- Linha 2 -->
                        <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="descricaoField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <!-- Linha 3 -->
                        <Label text="Carga Horária:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="cargaHorariaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <!-- Linha 4 -->
                        <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="codigoField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <!-- Linha 5 -->
                        <Label text="Ementa:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextArea fx:id="ementaField" prefHeight="80" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <!-- Linha 6 -->
                        <Label text="Semestre:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="semestreField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <!-- Linha 7 -->
                        <Label text="Curso:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <ComboBox fx:id="cursoCombo" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- BOTÕES -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button onAction="#cadastrarDisciplina" style="-fx-background-color: #0052D4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Cadastrar" />
                        <Button onAction="#limparCampos" style="-fx-background-color: #cccccc; -fx-font-weight: bold; -fx-background-radius: 8;" text="Limpar" />
                        <Button fx:id="btnVoltar" onAction="#voltar" style="-fx-background-color: transparent; -fx-border-color: #0052D4; -fx-text-fill: #0052D4; -fx-font-weight: bold; -fx-border-radius: 8;" text="Voltar" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>
