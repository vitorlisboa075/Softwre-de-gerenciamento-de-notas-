<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GerenciarTurmasController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0"
              AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="30.0"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0">

            <!-- Título -->
            <Label text="Gerenciar Turma" textFill="#333">
                <font><Font name="Arial Bold" size="24.0" /></font>
            </Label>

            <!-- Grade vazia (reserva para filtros futuros) -->
            <GridPane hgap="10.0">
                <columnConstraints>
                    <ColumnConstraints prefWidth="120.0" />
                    <ColumnConstraints prefWidth="300.0" />
                    <ColumnConstraints prefWidth="120.0" />
                    <ColumnConstraints prefWidth="300.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>

            <Separator prefWidth="200.0"/>

            <!-- Conteúdo principal -->
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">

                <!-- TABELA DE TURMAS -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Selecione a Turma" textFill="#333">
                            <font><Font name="Arial Bold" size="18.0" /></font>
                        </Label>

                        <TextField fx:id="pesquisaField"
                                   promptText="Buscar turma pelo nome..."/>

                        <TableView fx:id="tabelaTurmas" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colSelecao" prefWidth="40.0" text="Sel."/>
                                <TableColumn fx:id="colNome"     prefWidth="250.0" text="Turma"/>
                                <TableColumn fx:id="colPeriodo"  prefWidth="100.0" text="Período"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <!-- TABELA DE ALUNOS -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Alunos" textFill="#333">
                            <font><Font name="Arial Bold" size="18.0" /></font>
                        </Label>

                        <TextField fx:id="pesquisaField1"
                                   promptText="Buscar aluno pelo nome..."/>

                        <TableView fx:id="tabelaAlunos" VBox.vgrow="ALWAYS">
                            <columns>
                                <!-- Checkbox de seleção -->
                                <TableColumn fx:id="colSelAluno" prefWidth="40.0" text="Sel."/>
                                <TableColumn fx:id="colNomeAluno" prefWidth="230.0" text="Nome do Aluno"/>
                                <TableColumn fx:id="colCpfAluno"  prefWidth="120.0" text="CPF"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

            </HBox>

            <!-- Botões -->
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <children>
                    <Button fx:id="btnRemoverAluno"
                            text="Remover Aluno"
                            onAction="#handleRemoverAluno"/>
                    <Button fx:id="btnExcluirTurmas"
                            text="Excluir Turma"
                            onAction="#handleExcluirTurmas"/>
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
