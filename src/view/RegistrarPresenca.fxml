<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #dfe9f3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegistrarPresencaController">

    <children>
        <Label layoutX="320" layoutY="20" style="-fx-font-size: 26; -fx-font-weight: bold;" text="Registro de Presença" />

        <!-- Filtros -->
        <HBox layoutX="50" layoutY="70" spacing="20">
            <children>
                <Label text="Curso:" />
                <ComboBox fx:id="cursoCombo" prefWidth="150" />

                <Label text="Turma:" />
                <ComboBox fx:id="turmaCombo" prefWidth="150" />

                <Label text="Disciplina:" />
                <ComboBox fx:id="disciplinaCombo" prefWidth="150" />
            </children>
        </HBox>

        <!-- Tabela -->
        <TableView fx:id="tabelaAlunos" layoutX="50" layoutY="120" prefHeight="350" prefWidth="800">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="300" text="Nome" />
                <TableColumn fx:id="colMatricula" prefWidth="200" text="Matrícula" />
                <TableColumn fx:id="colPresenca" prefWidth="150" text="Presente" />
            </columns>
        </TableView>

        <!-- Botões -->
        <HBox layoutX="300" layoutY="500" spacing="20">
            <children>
                <Button onAction="#salvarPresenca" style="-fx-background-color: #0052D4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Salvar Presença" />
                <Button onAction="#limparCampos" style="-fx-background-color: #cccccc; -fx-font-weight: bold; -fx-background-radius: 8;" text="Limpar" />
                <Button fx:id="btnVoltar" onAction="#voltar" style="-fx-background-color: transparent; -fx-border-color: #0052D4; -fx-text-fill: #0052D4; -fx-font-weight: bold; -fx-border-radius: 8;" text="Voltar" />
            </children>
        </HBox>

    </children>
</AnchorPane>
