<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GerenciarUsuarioController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Gerenciamento de Usuários" textFill="#333">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="pesquisaField" promptText="Pesquisar por nome ou CPF..." HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleNovoUsuario" text="Novo Usuário" styleClass="form-button" />
                        <Button onAction="#handleEditarUsuario" text="Editar Usuário" styleClass="form-button-secondary" />
                        <Button onAction="#handleExcluirUsuarios" text="Excluir Selecionados" styleClass="sair-button" />
                    </children>
                </HBox>
                <TableView fx:id="tabelaUsuarios" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSelecao" prefWidth="50.0" text="Sel." />
                        <TableColumn fx:id="colNome" prefWidth="250.0" text="Nome" />
                        <TableColumn fx:id="colCpf" prefWidth="150.0" text="CPF" />
                        <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button fx:id="btnVoltar" onAction="#voltar" text="Voltar ao Menu" />
                     </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>