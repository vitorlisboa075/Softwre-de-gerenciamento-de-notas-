<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VerMinhasNotasController">
   <children>
      <Label fx:id="labelBoasVindas" text="Boletim de Notas" textFill="#2c3e50">
         <font>
            <Font name="Arial Bold" size="22.0" />
         </font>
      </Label>
      <TableView fx:id="tabelaBoletim" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colDisciplina" prefWidth="200.0" text="Disciplina" />
          <TableColumn fx:id="colProfessor" prefWidth="150.0" text="Professor" />
            <TableColumn fx:id="colNota1" prefWidth="75.0" text="Nota 1" />
            <TableColumn fx:id="colNota2" prefWidth="75.0" text="Nota 2" />
            <TableColumn fx:id="colNota3" prefWidth="75.0" text="Nota 3" />
            <TableColumn fx:id="colMedia" prefWidth="75.0" text="Média" />
            <TableColumn fx:id="colFaltas" prefWidth="75.0" text="Faltas" />
            <TableColumn fx:id="colSituacao" prefWidth="100.0" text="Situação" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets top="10.0" />
   </padding>
</VBox>